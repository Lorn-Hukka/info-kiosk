<dryIoc:PrismApplication x:Class="InfoKiosk.App.App"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="clr-namespace:InfoKiosk.App"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  xmlns:dryIoc="http://prismlibrary.com/">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Control}" x:Key="default">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="DemiBold"/>
                <Setter Property="Foreground" Value="Black"/>
            </Style>
            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource default}"/>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light"/>
                <ui:ControlsDictionary/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</dryIoc:PrismApplication>
